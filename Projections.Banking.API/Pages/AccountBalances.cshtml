@page
@using System.Globalization
@model Projections.Banking.API.Pages.AccountBalancesModel
@{
    ViewData["Title"] = "Account Balances";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <h2 class="mb-4">Account Balances</h2>

        <!-- Error messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Account Balances results -->
        @if (Model.Balances.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">List of current Account Balances:</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Account ID</th>
                                    <th>Account Number</th>
                                    <th>Account Name</th>
                                    <th>Owner</th>
                                    <th>Balance</th>
                                    <th>Last Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var balanceItem in Model.Balances.OrderBy(b => b.AccountNumber))
                                {
                                    <tr>
                                        <td>@balanceItem.AccountId</td>
                                        <td>@balanceItem.AccountNumber</td>
                                        <td>@balanceItem.AccountName</td>
                                        <td>@balanceItem.OwnerName</td>
                                        <td>
                                            <span class="text-@(balanceItem.Balance > 0 ? "success" : "danger")">
                                                @balanceItem.Balance.ToString("C", CultureInfo.GetCultureInfo("fr-FR"))
                                            </span>
                                        </td>
                                        <td>@balanceItem.LastUpdated.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> No balances found.
            </div>
        }
    </div>
</div>
